<table style="width: 70%; margin: 10px 20px;">
<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
	<td><%= line_item.quantity %> &times;</td>
	<td><%= line_item.store.name %></td>
	<td class="item_price"><%= number_to_currency(line_item.total_price, unit: "Rs. ") %></td>
</tr>
</table>